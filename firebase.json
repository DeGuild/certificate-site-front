{
  "hosting": {
    "public": "dist",
    "site": "certificate-manager",
    "rewrites": [
      { "source": "/api/**", "function": "app" },
      {
        "source": "/sharing/**",
        "destination": "/index.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/metamask",
        "destination": "/index.html"
      }
    ],

    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
